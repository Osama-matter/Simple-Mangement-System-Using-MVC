@model IEnumerable<Employes>

<div class="employee-container">
    <h1 class="display-4 mb-4 text-primary"><i class="fas fa-users me-2"></i>Employees Data</h1>

    <div class="mb-4">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Create New Employee
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Employee_Number)</th>
                    <th>@Html.DisplayNameFor(m => m.Employee_Id)</th>
                    <th>
                        @Html.ActionLink("Employee_Name", "Index", new {
                            sortField = "Employee_Name",
                            CurrentSortField = ViewBag.sortField,
                            SortDirection = ViewBag.SortDirection
                        }, new { @class = "text-white text-decoration-none" })
                    </th>
                    <th>
                        @Html.ActionLink("DOB", "Index", new {
                            sortField = "DOB",
                            CurrentSortField = ViewBag.sortField,
                            SortDirection = ViewBag.SortDirection
                        }, new { @class = "text-white text-decoration-none" })
                    </th>
                    <th>
                        @Html.ActionLink("Hiriring_Date", "Index", new {
                            sortField = "Hiriring_Date",
                            CurrentSortField = ViewBag.sortField,
                            SortDirection = ViewBag.SortDirection
                        }, new { @class = "text-white text-decoration-none" })
                    </th>
                    <th>
                        @Html.ActionLink("Gross_Salary", "Index", new {
                            sortField = "Gross_Salary",
                            CurrentSortField = ViewBag.sortField,
                            SortDirection = ViewBag.SortDirection
                        }, new { @class = "text-white text-decoration-none" })
                    </th>
                    <th>
                        @Html.ActionLink("netSalary", "Index", new {
                            sortField = "netSalary",
                            CurrentSortField = ViewBag.sortField,
                            SortDirection = ViewBag.SortDirection
                        }, new { @class = "text-white text-decoration-none" })
                    </th>
                    <th>
                        @Html.ActionLink("Department", "Index", new {
                            sortField = "DepartMent",
                            CurrentSortField = ViewBag.sortField,
                            SortDirection = ViewBag.SortDirection
                        }, new { @class = "text-white text-decoration-none" })
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle">
                        <td>@Html.DisplayFor(_ => item.Employee_Number)</td>
                        <td>@Html.DisplayFor(_ => item.Employee_Id)</td>
                        <td>@Html.DisplayFor(_ => item.Employee_Name)</td>
                        <td>@Html.DisplayFor(_ => item.DOB)</td>
                        <td>@Html.DisplayFor(_ => item.Hiriring_Date)</td>
                        <td class="text-end">@Html.DisplayFor(_ => item.Gross_Salary)</td>
                        <td class="text-end">@Html.DisplayFor(_ => item.NetSalary)</td>
                        <td>
                            <span class="badge bg-info text-dark">@Html.DisplayFor(_ => item.DepartMent.DepartmentName)</span>
                        </td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Employee_Id" 
                                   class="btn btn-sm btn-warning" 
                                   title="Edit">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Employee_Id" 
                                   class="btn btn-sm btn-danger" 
                                   title="Delete"
                                   onclick="return confirm('Are you sure you want to delete this employee?');">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .employee-container {
        padding: 1.5rem;
    }
    
    .table th {
        white-space: nowrap;
        vertical-align: middle;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .badge {
        padding: 0.35em 0.65em;
        font-size: 0.875em;
    }
    
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
</style>