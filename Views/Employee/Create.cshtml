@model Entity_FreamWork.Models.Employes
@{
    ViewData["Title"] = "Create Employee";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                <i class="fas fa-user-plus me-2"></i>@ViewData["Title"]
            </h3>
        </div>

        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Create" method="post" id="employeeForm" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-4">
                    <!-- Personal Information Column -->
                    <div class="col-lg-6">
                        <div class="section-box">
                            <h5 class="section-title">
                                <i class="fas fa-user-tie me-2"></i>Personal Information
                            </h5>
                            
                            <div class="mb-3">
                                <label asp-for="Employee_Number" class="form-label">
                                    <i class="fas fa-id-card me-2"></i>Employee Number
                                </label>
                                <input asp-for="Employee_Number" class="form-control" placeholder="EMP-001" />
                                <span asp-validation-for="Employee_Number" class="invalid-feedback"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Employee_Name" class="form-label">
                                    <i class="fas fa-signature me-2"></i>Full Name
                                </label>
                                <input asp-for="Employee_Name" class="form-control" placeholder="John Doe" />
                                <span asp-validation-for="Employee_Name" class="invalid-feedback"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DOB" class="form-label">
                                    <i class="fas fa-birthday-cake me-2"></i>Date of Birth
                                </label>
                                <input asp-for="DOB" class="form-control" type="date" />
                                <span asp-validation-for="DOB" class="invalid-feedback"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Hiriring_Date" class="form-label">
                                    <i class="fas fa-calendar-alt me-2"></i>Hiring Date
                                </label>
                                <input asp-for="Hiriring_Date" class="form-control" type="date" />
                                <span asp-validation-for="Hiriring_Date" class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Employment Details Column -->
                    <div class="col-lg-6">
                        <div class="section-box">
                            <h5 class="section-title">
                                <i class="fas fa-briefcase me-2"></i>Employment Details
                            </h5>

                            <div class="mb-3">
                                <label asp-for="DepartmentID" class="form-label">
                                    <i class="fas fa-building me-2"></i>Department
                                </label>
                                <select asp-for="DepartmentID" class="form-select" asp-items="@(new SelectList(ViewBag.DepartmentList, "DepartmentID", "DepartmentName"))">
                                    <option value="">-- Select Department --</option>
                                </select>
                                <span asp-validation-for="DepartmentID" class="invalid-feedback"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Gross_Salary" class="form-label">
                                    <i class="fas fa-money-bill-wave me-2"></i>Gross Salary
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Gross_Salary" class="form-control" type="number" step="0.01" min="0" placeholder="5000.00" />
                                </div>
                                <span asp-validation-for="Gross_Salary" class="invalid-feedback"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NetSalary" class="form-label">
                                    <i class="fas fa-wallet me-2"></i>Net Salary
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="NetSalary" class="form-control" type="number" step="0.01" min="0" placeholder="4000.00" />
                                </div>
                                <span asp-validation-for="NetSalary" class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-2"></i>Save Employee
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 10px;
            border: none;
            overflow: hidden;
        }
        
        .card-header {
            padding: 1.25rem 1.5rem;
        }
        
        .section-box {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1.5rem;
            height: 100%;
        }
        
        .section-title {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 1.5rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid #e9ecef;
            display: flex;
            align-items: center;
        }
        
        .form-label {
            font-weight: 500;
            color: #495057;
        }
        
        .form-control, .form-select {
            border-radius: 6px;
            padding: 0.5rem 1rem;
            border: 1px solid #ced4da;
        }
        
        .btn {
            border-radius: 6px;
            padding: 0.5rem 1.25rem;
            font-weight: 500;
        }
        
        .invalid-feedback {
            font-size: 0.875rem;
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Your existing JavaScript validation code remains unchanged
        $(document).ready(function () {
            // Custom validation for date fields
            $('#DOB').on('change', function() {
                var dob = new Date($(this).val());
                var today = new Date();
                var age = today.getFullYear() - dob.getFullYear();
                
                if (age < 18 || age > 65) {
                    $(this).addClass('is-invalid');
                    if (!$(this).next('.invalid-feedback').length) {
                        $(this).after('<span class="invalid-feedback">Age must be between 18 and 65 years</span>');
                    }
                } else {
                    $(this).removeClass('is-invalid');
                    $(this).next('.invalid-feedback').remove();
                }
            });

            // Custom validation for salary fields
            $('input[type="number"]').on('input', function() {
                var value = parseFloat($(this).val());
                if (value < 0) {
                    $(this).addClass('is-invalid');
                    if (!$(this).next('.invalid-feedback').length) {
                        $(this).after('<span class="invalid-feedback">Salary cannot be negative</span>');
                    }
                } else {
                    $(this).removeClass('is-invalid');
                    $(this).next('.invalid-feedback').remove();
                }
            });

            // Form submission validation
            $('#employeeForm').on('submit', function(e) {
                var isValid = true;
                
                // Check if department is selected
                if (!$('#DepartmentID').val()) {
                    $('#DepartmentID').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#DepartmentID').removeClass('is-invalid');
                }
                
                if (!isValid) {
                    e.preventDefault();
                    alert('Please fill in all required fields correctly.');
                }
            });
        });
    </script>
}